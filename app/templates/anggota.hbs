<!-- Header -->
<div class='header d-flex justify-content-between align-items-center mb-4'>
  <h1 class='header-title'>Daftar Anggota: {{this.selectedTimName}}</h1>
  <div class='d-flex gap-3'>
    <!-- Input pencarian -->
    <input
      type='text'
      class='form-control'
      placeholder='Cari nama anggota...'
      {{on 'input' this.searchAnggota}}
    />
    <!-- Tombol tambah anggota -->
    <button class='btn btn-primary' {{on 'click' this.openAddAnggotaModal}}>
      Tambah Anggota
    </button>
    <!-- Tombol kembali -->
    <button class='btn btn-secondary' {{on 'click' (fn this.goBack)}}>
      Kembali
    </button>
  </div>
</div>

<!-- Tabel -->
<div class='table-responsive'>
  <table class='table table-striped table-bordered'>
    <thead class='table-dark'>
      <tr>
        <th>#</th>
        <th>Nama</th>
        <th>Peran</th>
        <th class='text-center'>Aksi</th>
      </tr>
    </thead>
    <tbody>
      {{#each this.filteredAnggota as |anggota index|}}
        <tr>
          <td>{{inc index}}</td>
          <td>{{anggota.nama}}</td>
          <td>{{anggota.peran}}</td>
          <td class='text-center'>
            <button
              class='btn btn-sm btn-warning me-2'
              {{on 'click' (fn this.openEditAnggotaModal anggota)}}
            >
              Edit
            </button>
            <button
              type='button'
              class='btn btn-sm btn-danger'
              {{on 'click' (fn this.confirmDeleteAnggota anggota)}}
            >
              Hapus
            </button>
          </td>
        </tr>
      {{else}}
        <tr>
          <td colspan='4' class='text-center text-muted'>
            Tidak ada data anggota yang sesuai dengan pencarian.
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<!-- Modal Tambah Anggota -->
<div
  class='modal fade'
  id='addAnggotaModal'
  tabindex='-1'
  aria-labelledby='addAnggotaModalLabel'
  aria-hidden='true'
>
  <div class='modal-dialog'>
    <div class='modal-content'>
      <div class='modal-header'>
        <h5 class='modal-title' id='addAnggotaModalLabel'>Tambah Anggota</h5>
        <button
          type='button'
          class='btn-close'
          data-bs-dismiss='modal'
          aria-label='Close'
        ></button>
      </div>
      <div class='modal-body'>
        <form {{on 'submit' this.submitAddAnggota}}>
          {{!-- <div class='mb-3'>
            <label for='tim-id' class='form-label'>Tim ID (Otomatis)</label>
            <input
              id='tim-id'
              class='form-control'
              type='text'
              value={{this.currentAnggota.timId}}
              readonly
            />
          </div> --}}
          <div class='mb-3'>
            <label for='nama' class='form-label'>Nama</label>
            <input
              id='nama'
              class='form-control'
              type='text'
              value={{this.currentAnggota.nama}}
              {{on 'input' (fn this.updateField 'nama')}}
              required
            />
          </div>
          <div class='mb-3'>
            <label for='peran' class='form-label'>Peran</label>
            <input
              id='peran'
              class='form-control'
              type='text'
              value={{this.currentAnggota.peran}}
              {{on 'input' (fn this.updateField 'peran')}}
              required
            />
          </div>
          <button type='submit' class='btn btn-primary'>Simpan</button>
        </form>

      </div>
    </div>
  </div>
</div>

<!-- Modal Edit Anggota -->
<div
  class='modal fade'
  id='editAnggotaModal'
  tabindex='-1'
  aria-labelledby='editAnggotaModalLabel'
  aria-hidden='true'
>
  <div class='modal-dialog'>
    <div class='modal-content'>
      <form {{on 'submit' this.submitEditAnggota}}>
        <div class='modal-header'>
          <h5 class='modal-title' id='editAnggotaModalLabel'>Edit Anggota</h5>
          <button
            type='button'
            class='btn-close'
            data-bs-dismiss='modal'
            aria-label='Close'
          ></button>
        </div>
        <div class='modal-body'>
          <!-- Nama -->
          <div class='mb-3'>
            <label for='nama' class='form-label'>Nama</label>
            <input
              type='text'
              class='form-control'
              id='nama'
              value={{this.currentAnggota.nama}}
              {{on 'input' (fn this.updateField 'nama')}}
              required
            />
          </div>
          <!-- Peran -->
          <div class='mb-3'>
            <label for='peran' class='form-label'>Peran</label>
            <input
              type='text'
              class='form-control'
              id='peran'
              value={{this.currentAnggota.peran}}
              {{on 'input' (fn this.updateField 'peran')}}
              required
            />
          </div>
        </div>
        <div class='modal-footer'>
          <button
            type='button'
            class='btn btn-secondary'
            data-bs-dismiss='modal'
          >Batal</button>
          <button type='submit' class='btn btn-primary'>Simpan Perubahan</button>
        </div>
      </form>
    </div>
  </div>
</div>

<div
  class='modal fade'
  id='deleteAnggotaModal'
  tabindex='-1'
  aria-labelledby='deleteAnggotaModalLabel'
  aria-hidden='true'
>
  <div class='modal-dialog'>
    <div class='modal-content'>
      <div class='modal-header'>
        <h5 class='modal-title' id='deleteAnggotaModalLabel'>Konfirmasi Hapus</h5>
        <button
          type='button'
          class='btn-close'
          data-bs-dismiss='modal'
          aria-label='Close'
        ></button>
      </div>
      <div class='modal-body'>
        Apakah Anda yakin ingin menghapus anggota
        <strong>{{this.currentAnggota.nama}}</strong>?
      </div>
      <div class='modal-footer'>
        <button type='button' class='btn btn-secondary' data-bs-dismiss='modal'>
          Batal
        </button>
        <button
          type='button'
          class='btn btn-danger'
          {{on 'click' this.deleteAnggota}}
        >
          Hapus
        </button>
      </div>
    </div>
  </div>
</div>