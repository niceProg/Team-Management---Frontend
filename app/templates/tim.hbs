<!-- Header -->
<div class='header d-flex justify-content-between align-items-center mb-4'>
  <h1 class='header-title'>Daftar Tim</h1>
  <div class='d-flex gap-3'>
    <!-- Input pencarian -->
    <input
      type='text'
      class='form-control'
      placeholder='Cari nama tim...'
      {{on 'input' this.searchTim}}
    />
    <!-- Tombol tambah tim -->
    <button
      class='btn btn-primary'
      type='button'
      {{on 'click' this.openAddTimModal}}
    >
      Tambah Tim
    </button>
  </div>
</div>

<!-- Tabel -->
<div class='table-responsive'>
  <table class='table table-striped table-bordered'>
    <thead class='table-dark'>
      <tr>
        <th>Nomor</th>
        <th>Nama</th>
        <th>Deskripsi</th>
        <th class='text-center'>Aksi</th>
      </tr>
    </thead>
    <tbody>
      {{#each this.filteredTim as |tim index|}}
        <tr>
          <td>{{inc index}}</td>
          <td>{{tim.nama}}</td>
          <td>{{tim.deskripsi}}</td>
          <td class='text-center'>
            <button
              class='btn btn-sm btn-info me-2'
              {{on 'click' (fn this.openEditTimModal tim)}}
            >
              Edit
            </button>
            <button
              class='btn btn-sm btn-danger me-2'
              {{on 'click' (fn this.deleteTim tim.id)}}
            >
              Hapus
            </button>
            <button
              class='btn btn-sm btn-primary'
              {{on 'click' (fn this.selectTimForAnggota tim.id tim.nama)}}
            >
              Detail
            </button>
          </td>
        </tr>
      {{else}}
        <tr>
          <td colspan='4' class='text-center text-muted'>
            Tidak ada data tim yang sesuai dengan pencarian.
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>

<!-- Modal Tambah Tim -->
<div
  class='modal fade'
  id='addTimModal'
  tabindex='-1'
  aria-labelledby='addTimModalLabel'
  aria-hidden='true'
>
  <div class='modal-dialog'>
    <div class='modal-content'>
      <div class='modal-header'>
        <h5 class='modal-title' id='addTimModalLabel'>Tambah Tim</h5>
        <button
          type='button'
          class='btn-close'
          data-bs-dismiss='modal'
          aria-label='Close'
        ></button>
      </div>
      <div class='modal-body'>
        <form {{on 'submit' this.submitAddTim}}>
          <div class='mb-3'>
            <label for='nama' class='form-label'>Nama</label>
            <input
              id='nama'
              class='form-control'
              type='text'
              value={{this.currentTim.nama}}
              oninput={{action (mut this.currentTim.nama) value='target.value'}}
              required
            />
          </div>
          <div class='mb-3'>
            <label for='deskripsi' class='form-label'>Deskripsi</label>
            <textarea
              id='deskripsi'
              class='form-control'
              value={{this.currentTim.deskripsi}}
              oninput={{action
                (mut this.currentTim.deskripsi)
                value='target.value'
              }}
            ></textarea>
          </div>
          <button type='submit' class='btn btn-primary'>Simpan</button>
        </form>

      </div>
    </div>
  </div>
</div>

<!-- Modal Edit Tim -->
<div
  class='modal fade'
  id='editTimModal'
  tabindex='-1'
  aria-labelledby='editTimModalLabel'
  aria-hidden='true'
>
  <div class='modal-dialog'>
    <div class='modal-content'>
      <div class='modal-header'>
        <h5 class='modal-title' id='editTimModalLabel'>Edit Tim</h5>
        <button
          type='button'
          class='btn-close'
          data-bs-dismiss='modal'
          aria-label='Close'
        ></button>
      </div>
      <div class='modal-body'>
        <form {{on 'submit' this.submitEditTim}}>
          <div class='mb-3'>
            <label for='edit-nama' class='form-label'>Nama</label>
            <input
              id='edit-nama'
              class='form-control'
              type='text'
              value={{this.currentTim.nama}}
              oninput={{action (mut this.currentTim.nama) value='target.value'}}
              required
            />
          </div>
          <div class='mb-3'>
            <label for='edit-deskripsi' class='form-label'>Deskripsi</label>
            <textarea
              id='edit-deskripsi'
              class='form-control'
              value={{this.currentTim.deskripsi}}
              oninput={{action
                (mut this.currentTim.deskripsi)
                value='target.value'
              }}
            ></textarea>
          </div>
          <button type='submit' class='btn btn-primary'>Simpan</button>
        </form>
      </div>
    </div>
  </div>
</div>